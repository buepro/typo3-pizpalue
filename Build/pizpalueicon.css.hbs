@font-face {
    font-family: "{{ name }}";
    src: {{{ fontSrc }}};
}

.ppicon::before, .bootstrappackageicon::before, .glyphicon::before {
    font-family: "{{ name }}" !important;
    -moz-osx-font-smoothing: grayscale;
    -webkit-font-smoothing: antialiased;
    display: inline-block;
    font-style: normal;
    font-weight: normal !important;
    font-variant: normal;
    text-rendering: auto;
    text-transform: none;
    line-height: inherit;
}

{{# each codepoints }}
.{{ ../prefix }}-{{ @key }}::before, .bootstrappackageicon-{{ @key }}::before, .glyphicon-{{ @key }}::before { content: "\\{{ codepoint this }}"; }
{{/ each }}
